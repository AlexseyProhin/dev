  "license": "ISC",
  "bugs": {
    "url": "https://github.com/deepcase/deepcase/issues"
  },
  "homepage": "https://github.com/deepcase/deepcase#readme",
  "scripts": {
    "gulp": "gulp",
    "prepare": "(yes | sudo apt install screen); (yes | sudo apt install rsync); screen -d -m sudo docker-up",
    "packages": "(yes | npx gulp packages:get); (npx gulp packages:sync)",
    "store": "(cd packages/store-example; screen -d -m npm run screen)",
    "hasura": "(cd packages/hasura-example; screen -d -m npm run screen; sleep 7; npm run migrate)",
    "docker": "(cd packages/hasura; screen -d -m npm run screen)",
    "start": "npm install; (npm run prepare; npm run packages; sleep 3; npm run docker; sleep 5; npm run store; sleep 3; npm run hasura;)"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deepcase/deepcase.git"
  },
  "type": "module",
  "devDependencies": {
    "@types/gulp": "^4.0.8",
    "concurrently": "^5.3.0",
    "del": "^6.0.0",
    "gulp": "^4.0.2",
    "gulp-run-command": "^0.0.10",
    "i": "^0.3.6",
    "minimist": "^1.2.5",
    "npm": "^7.5.4",
    "simple-git": "^2.34.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  }
}
