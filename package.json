{
  "name": "@deepcase/deepcase",
  "private": true,
  "version": "0.0.0",
  "description": "Deepcase ecosystem monorepo.",
  "author": "ivansglazunov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/deepcase/deepcase/issues"
  },
  "homepage": "https://github.com/deepcase/deepcase#readme",
  "scripts": {
    "gulp": "gulp",
    "prepare": "(yes | sudo apt install screen) && screen -d -m sudo docker-up",
    "packages": "(yes | npx gulp packages:get)",
    "store": "(cd packages/store-example && screen -d -m npm run dev -- -p 3000)",
    "hasura": "(cd packages/hasura-example && screen -d -m npm run dev -- -p 3001)",
    "docker": "(cd packages/hasura && (AUTH_WEBHOOK=http://dockerhost:3001/api/auth/webhook npm run docker-local))",
    "gitpod": "npm install && (npm run prepare && npm run packages && npm run store && npm run hasura && npm run docker)"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deepcase/deepcase.git"
  },
  "type": "module",
  "devDependencies": {
    "@types/gulp": "^4.0.8",
    "concurrently": "^5.3.0",
    "del": "^6.0.0",
    "gulp": "^4.0.2",
    "gulp-run-command": "^0.0.10",
    "i": "^0.3.6",
    "minimist": "^1.2.5",
    "npm": "^7.5.4",
    "simple-git": "^2.34.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  }
}
